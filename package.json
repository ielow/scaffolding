{
  "name": "scaffolding",
  "version": "1.0.0",
  "description": "Scaffolding projects with Webpack by ielow ",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "start": "npm install",
    "build": "webpack --progress --color",
    "serve": "webpack-dev-server --color --progress --open --port=3000",
    "postinstall": "npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ielow/scaffolding.git"
  },
  "author": "ielow",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ielow/scaffolding/issues"
  },
  "homepage": "https://github.com/ielow/scaffolding#readme",
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/jquery": "^3.2.12",
    "@types/node": "^8.0.32",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-runtime": "^6.26.0",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "handlebars": "^4.0.10",
    "handlebars-entry-loader": "^1.1.0",
    "handlebars-loader": "^1.6.0",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "node-sass": "^4.5.3",
    "path": "^0.12.7",
    "postcss-loader": "^2.0.6",
    "precss": "^2.0.0",
    "pug": "^2.0.0-rc.4",
    "pug-html-loader": "^1.1.5",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-jest": "^21.1.0",
    "ts-loader": "^2.3.7",
    "typescript": "^2.5.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "@types/handlebars": "^4.0.36",
    "jquery": "^3.2.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|hbs)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleDirectories": ["node_modules", "app"]
  }
}
